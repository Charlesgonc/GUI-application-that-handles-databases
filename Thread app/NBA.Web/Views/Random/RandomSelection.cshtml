@model IEnumerable<NBA.Web.Models.Player>

<h2> Player Tables </h2>
<br />

<p style=" color:red"> @TempData["editResult"]</p>
<p style=" color:red"> @TempData["counter"]</p>

<h3> Selected Players </h3>
<br />
@if (Model.Count() == 0)
{
    <p> There is no data in the database! </p>
}
else
{
    <table border="1">
        <tr>
            <th> @Html.DisplayNameFor(m => m.First().PlayerId)</th>
            <th> @Html.DisplayNameFor(m => m.First().PlayerName)</th>
            <th> Selection status </th>
        </tr>

        @foreach (var player in Model)
        {
            @if (player.PlayerIsSelected == 1)
            {
                <tr>
                    <td> @Html.DisplayFor(m => player.PlayerId)</td>
                    <td> @Html.DisplayFor(m => player.PlayerName)</td>
                    <td> SELECTED </td>
                </tr>
            }
        }
    </table>

    <br />
    <h3> NOT Selected Players </h3>
    <br />
    <table border="1">
        <tr>
            <th> @Html.DisplayNameFor(m => m.First().PlayerId)</th>
            <th> @Html.DisplayNameFor(m => m.First().PlayerName)</th>
            <th> Selection status </th>
        </tr>

        @foreach (var player in Model)
        {
            @if (player.PlayerIsSelected == 0)
            {
                <tr>
                    <td> @Html.DisplayFor(m => player.PlayerId)</td>
                    <td> @Html.DisplayFor(m => player.PlayerName)</td>
                    <td> UNSELECTED </td>
                </tr>
            }
        }
    </table>
}
