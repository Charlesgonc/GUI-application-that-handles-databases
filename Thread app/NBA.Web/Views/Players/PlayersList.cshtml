@model IEnumerable<NBA.Web.Models.Player>

<h2> Player List </h2> 

@if ( Model.Count() == 0)
{
    <p> There is no data in the database! </p>
}
else
{
    <table border="1">
        <tr>
            <th> @Html.DisplayNameFor(m => m.First().PlayerName)</th>
            <th> Datasheet</th>
            <th> Delete </th>
            <th> Modify </th>
        </tr>

        @foreach (var player in Model)
        {
            <tr>
                <td> @Html.DisplayFor(m=> player.PlayerName)</td>
                <td> @Html.ActionLink("[SHOW]", "Details", new { Id = player.PlayerId})</td>
                <td> @Html.ActionLink("[Del]", "Remove", new { Id = player.PlayerId})</td>
                <td> @Html.ActionLink("[Edit]", "Edit", new { Id = player.PlayerId})</td>
               
            </tr>
        }
    </table>
}